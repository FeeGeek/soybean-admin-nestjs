generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户表
model sys_user {
  id           String    @id
  username     String    @unique
  password     String
  org_code     String
  built_in     Boolean   @default(false)
  avatar       String?
  email        String?   @unique
  phone_number String?   @unique
  nike_name    String
  status       Status
  created_at   DateTime  @default(now())
  created_by   String
  updated_at   DateTime? @updatedAt
  updated_by   String?
}

enum Status {
  ENABLED
  DISABLED
  BANNED
}

// casbin_rule
model CasbinRule {
  id    Int     @id @default(autoincrement())
  ptype String
  v0    String?
  v1    String?
  v2    String?
  v3    String?
  v4    String?
  v5    String?

  @@map("casbin_rule")
}

// 角色表
model sys_role {
  id          String    @id
  code        String    @unique
  name        String
  description String?
  pid         String    @default("0")
  status      Status
  created_at  DateTime  @default(now())
  created_by  String
  updated_at  DateTime? @updatedAt
  updated_by  String?
}

model sys_user_role {
  userId String
  roleId String

  @@id([userId, roleId])
}

// 接口资源表
model sys_endpoint {
  id         String  @id
  path       String
  method     String
  action     String
  resource   String
  controller String
  summary    String?
}

model sys_organization {
  id          String    @id
  code        String    @unique
  name        String
  description String?
  pid         String    @default("0")
  status      Status
  created_at  DateTime  @default(now())
  created_by  String
  updated_at  DateTime? @updatedAt
  updated_by  String?

  @@map("sys_organization")
}

model sys_login_log {
  id         String   @id @default(cuid())
  user_id    String
  username   String
  org_code   String
  login_time DateTime @default(now())
  ip         String
  port       Int?
  address    String
  user_agent String
  request_id String
  type       String
  created_at DateTime @default(now())
  created_by String
}
